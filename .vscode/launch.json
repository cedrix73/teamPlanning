    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch index.php",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "H:/Sources/Php/team_planning_v1_3/index.php"
        },
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
